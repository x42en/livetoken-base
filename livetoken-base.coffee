@valid_phone = (phone) ->
	if phone.length < 6 or phone.length > 20
		return false

	return not isNaN(phone)

@valid_mail = (mail) ->
	unless mail
		return false
	if mail.indexOf('@') is -1
		return false
	else if mail.match(/^[A-Z0-9\._+-]+@[A-Z0-9\.-]+.[A-Z]{2,4}$/igm)
		return true
	return false

@correct_phone = (dial_code, phone) ->
	dial_code = dial_code.replace(/\s+/g, '')
	if dial_code.substr(0,1) is '+'
		dial_code = '00' + dial_code.substr(1)
	phone = phone.replace(/\s+/g, '')
	
	if phone.substr(0,1) is '+'
		result = '00' + phone.substr(1)
	else if phone.substr(0,dial_code.length) is dial_code
		result = phone
	else if phone.substr(0,1) is '0'
		result = dial_code + phone.substr(1)
	else
		result = dial_code + phone

	return result



