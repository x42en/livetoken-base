if Meteor.isClient
	Meteor.getAuthMethods = () ->
		Meteor.call 'livetoken.authMethods', (err, res) ->
			if err and err.reason
				console.error "#{err.error}: #{err.reason}"
			else
				Session.set 'livetoken.authMethods', res

	Meteor.registerUser = (options, callback) ->
		# If no country is set, use client browser default
		unless options.dial_code
			lang = (window.navigator.userLanguage || window.navigator.language).substr(0,2).toUpperCase()
			for l of indicatives
				if l.code is lang
					options.dial_code = l.dial_code
					break

		Meteor.call 'livetoken.createUser', options, (err, id) =>
			if err and err.reason
				console.error "#{err.error}: #{err.reason}"
				callback err
			else
				callback id

	Meteor.requestToken = (options, callback) ->
		# If no country is set, use client browser default
		unless options.dial_code
			lang = (window.navigator.userLanguage || window.navigator.language).substr(0,2).toUpperCase()
			for l of indicatives
				if l.code is lang
					options.dial_code = l.dial_code
					break

		# reset previous attempt
		Session.set 'livetoken.emailToken', null
		Session.set 'livetoken.phoneToken', null

		if options.email
			Session.set 'livetoken.emailToken', options.email
		if options.phone
			Session.set 'livetoken.phoneToken', options.phone
		if options.ident
			if valid_mail options.ident
				Session.set 'livetoken.emailToken', options.ident
			else if valid_phone options.ident
				Session.set 'livetoken.phoneToken', options.ident
			else
				throw new Meteor.Error 'invalid-identity', 'Your email or phone seems invalid.'

		# Correct phone token if necessary with correct country dial code
		if Session.get 'livetoken.phoneToken'
			phone = correct_phone options.dial_code, Session.get('livetoken.phoneToken')
			Session.set 'livetoken.phoneToken', phone

		unless Session.get 'livetoken.authMethods'
			Meteor.getAuthMethods()

		Meteor.call 'livetoken.sendToken', options, (err, res) ->
			if err and err.reason
				callback err
			else
				callback res

	Meteor.loginWithToken = (options, callback) ->
		unless options and Object.keys(options).length > 0
			throw new Meteor.Error 'empty-infos', 'Please enter your token(s).'
		
		creds = {}
		user = { type: 'internal', email: '' }

		for i, auth of Session.get 'livetoken.authMethods'
			unless options[auth.name]
				error = "#{auth.name} token is mandatory"
				break

			if auth.name is 'ident'
				if Session.get 'livetoken.emailToken'
					auth.name = 'email'
				else if Session.get 'livetoken.phoneToken'
					auth.name = 'phone'
				else
					throw new Meteor.Error 'empty-authentication', 'Your authentication type is not set.'
				options[auth.name] = options.ident
			
			ident = Session.get "livetoken.#{auth.name}Token"
			creds[ident] = { type: auth.name, token: options[auth.name] }
			if auth.name is 'email'
				user.email = ident
		
		if Object.keys(creds).length > 0
			credentials = [creds]
			credentials[0]['user'] = user

			try
				Accounts.callLoginMethod
					methodArguments: credentials
					userCallback: callback
			catch e
				throw new Meteor.Error 500, e.reason, e.details

		else if error
			Session.set 'loginLiveTokenMessage_type', 'error'
			Session.set 'loginLiveTokenMessage', error
		else
			Session.set 'loginLiveTokenMessage_type', 'error'
			Session.set 'loginLiveTokenMessage', 'Strange days...'

	Meteor.setUsername = (username, callabck) ->
		unless username
			throw new Meteor.Error 'empty-username', 'Your username can not be empty.'

		Meteor.call 'livetoken.updateUsername', username, (err, res) ->
			if err and err.reason
				console.error "#{err.error}: #{err.reason}"
				callback err
			else
				callback res
