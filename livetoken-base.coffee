				username: Match.Optional(String)
				email: Match.Optional(String)
				phone: Match.Optional(String)
				company: Match.Optional(String)
				name: Match.Optional(String)
				surname: Match.Optional(String)
			)

			if options.phone
				unless valid_phone options.phone
					throw new Meteor.Error 'invalid-phone', 'Your phone seems invalid.'

			Accounts.livetoken.createUser options
		
		'livetoken.sendToken': (options) ->
			unless options
				throw new Meteor.Error 'empty-infos', 'You need to pass some infos.'

			infos = {}
			if options.email
				options.email = options.email.toLowerCase()
			
			switch Accounts.livetoken.auth
				when 'EMAIL-ONLY'
					unless options.email
						throw new Meteor.Error 'invalid-authentication', 'An email is mandatory.'
					unless valid_mail options.email
						throw new Meteor.Error 'invalid-email', 'Your email seems invalid.'

					infos.Email = options.email
					user = Meteor.users.findOne { 'email': options.email }

				when 'PHONE-ONLY'
					unless options.phone
						throw new Meteor.Error 'invalid-authentication', 'A phone is mandatory.'
					unless valid_phone options.phone
						throw new Meteor.Error 'invalid-phone', 'Your phone seems invalid.'

					infos.Phone = correct_phone options.dial_code, options.phone
					user = Meteor.users.findOne { 'phone': options.phone }

				when 'EMAIL-OR-PHONE'
					unless options.ident
						throw new Meteor.Error 'empty-authentication', 'An email or a phone is mandatory.'
					
					if valid_mail options.ident
						infos.Email = options.ident.toLowerCase()
						options.email = infos.Email
						user = Meteor.users.findOne { 'email': options.email }
					else if valid_phone options.ident
						infos.Phone = correct_phone options.dial_code, options.ident
						options.phone = infos.Phone
						user = Meteor.users.findOne { 'phone': options.phone }
					else
						throw new Meteor.Error 'invalid-authentication', 'Your email or your phone is invalid.'
					
				when 'EMAIL-AND-PHONE'
					unless options.email
						throw new Meteor.Error 'empty-authentication', 'An email is mandatory.'
					unless options.phone
						throw new Meteor.Error 'empty-authentication', 'A phone is mandatory.'

					unless valid_mail options.email
						throw new Meteor.Error 'invalid-email', 'Your email seems invalid.'
					unless valid_phone options.phone
						throw new Meteor.Error 'invalid-phone', 'Your phone seems invalid.'

					infos.Email = options.email
					infos.Phone = correct_phone options.dial_code, options.phone
					
					user = Meteor.users.findOne { 'email': options.email, 'phone': options.phone }
				else
					throw new Meteor.Error 'invalid-config', 'Please verify your authentication configuration.'
			
			unless user
				throw new Meteor.Error 'unknown-user', 'Sorry this user is not registered.'	

			userId = user._id
			unless Accounts.livetoken.client_id
				throw new Meteor.Error 'unconfigured', 'You must configure your client_id.'

			infos.Client_ID = Accounts.livetoken.client_id
			
			response = Async.runSync (done) ->
				Accounts.livetoken.sendToken infos, (token) ->
					err = {}
					
					if token and token.data
						if token.data.State
							tokenRecord = {}
							tokenRecord.when = token.data.Time
							if token.data.Email
								tokenRecord.token = CryptoJS.SHA1("#{token.data.Email}/#{options.email}").toString()
								Meteor.users.update { _id: userId }, { $set: {'services.email.verificationTokens': tokenRecord } }

							if token.data.Phone
								tokenRecord.token = CryptoJS.SHA1("#{token.data.Phone}/#{options.phone}").toString()
								Meteor.users.update { _id: userId }, { $set: {'services.phone.verificationTokens': tokenRecord } }
							
						else if token.data.Msg
							err = new Meteor.Error 'livetoken-error', token.data.Msg
						else
							err = new Meteor.Error 'livetoken-error', 'Unknown error.'
					else
						err = new Meteor.Error 'empty-result', 'Sorry, something went wrong when asking token...'

					done(err, null)
			
			if response.error and response.error.error
				throw new Meteor.Error response.error.error, response.error.reason
			
			return response.result

