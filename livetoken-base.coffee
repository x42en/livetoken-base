		'livetoken.createUser': (options) ->
			unless options
				throw new Meteor.Error 'empty-infos', 'You need to pass some infos.'

			unless options.email
				throw new Meteor.Error 'empty-email', 'You must set an email.'

			unless valid_mail options.email
