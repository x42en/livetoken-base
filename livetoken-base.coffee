			Meteor.users.update user._id, { $set: user }


	Accounts.registerLoginHandler 'livetoken', (credentials) =>
		toset = {}

		for ident, credential of credentials
			if credential.type.toLowerCase() is 'internal'
				continue
			
			ident = ident.toLowerCase()
			token = CryptoJS.SHA1("#{credential.token}/#{ident}").toString()

			# Only make one request to user ident
			unless user
				if credential.type is 'email'
					user = Meteor.users.findOne { 'email': ident }
				else
					user = Meteor.users.findOne { 'phone': ident }
			# If user already retrieve check identity
			else
				if credential.type is 'phone'
					if not user.profile or (user.phone isnt ident)
						throw new Meteor.Error 'invalid-user', 'Your phone number is not set or does not match.'
			
			unless user
				throw new Meteor.Error "unknown-user", "You have to register your #{credential.type} first."
			
			unless user.services["#{credential.type}"].verificationTokens
				throw new Meteor.Error 'no-token', "No token is set for #{credential.type}."

			if user.services["#{credential.type}"].verificationTokens.token isnt token
				if user.try < Accounts.livetoken.retry
					user.try += 1
					Meteor.users.update user._id, { $set: {'try': user.try } }
					throw new Meteor.Error "invalid-#{credential.type}", "Your #{credential.type} token is invalid."
				else
					Meteor.users.update user._id, { $set: {"services.#{credential.type}.verificationTokens": null, 'try': 0 } }
					throw new Meteor.Error "try-exceeded", "You enter to much wrong token, please restart login process."
			
			generated = user.services["#{credential.type}"].verificationTokens.when
			done = moment.unix(generated)
			ellapsed = moment().diff(done, 'seconds')
			
			# Auto set email for login if needed
			unless credentials.user.email
				credentials.user.email = user.email
			
			if ellapsed > Accounts.livetoken.timeout
				Meteor.users.update user._id, { $set: {"services.#{credential.type}.verificationTokens": null } }
				throw new Meteor.Error 'expired-token', "Your #{credential.type} token has expired #{ellapsed}sec/#{Accounts.livetoken.timeout}sec, please restart login process."
			
			# You can not login within 5 seconds... or you are a robot
			if ellapsed < 5
				throw new Meteor.Error 'early-token', "Your #{credential.type} token is not active yet, are you human ?"
			
			# Only for emails
			if credential.type is 'email'
				
				# If token is good and email unverified, auto-validate it
				unless user.emails[0].verified
					user.emails[0].verified = true
					Meteor.users.update user._id, {$set: {emails: user.emails } }
			
			toset["services.#{credential.type}.verificationTokens"] = null
		
		# Delete token entry, and set try to 0
		toset['try'] = 0
		Meteor.users.update user._id, { $set: toset }

		# Calculate session token
		stampedToken = Accounts._generateStampedLoginToken()
		hashStampedToken = Accounts._hashStampedToken(stampedToken)

		# Store the resume token if needed
		Meteor.users.update user._id, { $push: {'services.resume.loginTokens': hashStampedToken} }

		response = {}
		response.token = stampedToken.token
		response.userId = user._id
		
		return response

	Accounts.validateLoginAttempt (attemptInfo) ->
		if attemptInfo.error and (attemptInfo.error.error or attemptInfo.error.reason)
			throw new Meteor.Error attemptInfo.error.error, attemptInfo.error.reason
		
		if attemptInfo.type is 'resume'
			return true

		if attemptInfo.methodName is 'createUser'
			return false

		unless attemptInfo.allowed
			return false

		# email = attemptInfo.methodArguments[0].user.email

		# No need to check email verified has they are already corrected by login handler
		unless attemptInfo.methodName is 'login'
			throw new Meteor.Error 'unkwown-procedure', 'Login procedure unknown.'
		
		return true





